{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "baseUrl": "./src",
    "module": "es6",
    "lib": ["es6", "dom"],
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noErrorTruncation": true,
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
